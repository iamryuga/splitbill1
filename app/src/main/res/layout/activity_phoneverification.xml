<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Phoneverification"
    android:background="@drawable/phonenumber">

   <View

       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
   <TextView
       android:id="@+id/hello"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:gravity="left"
      android:padding="20dp"
      android:text="Hello"
      android:textSize="50dp"
      android:textColor="@color/white"
      android:textAlignment="gravity"
      android:textStyle="bold"
      />

   <TextView
       android:id="@+id/verifyphone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/hello"
       android:padding="20dp"
       android:text="Verify Your Phone"

       android:textColor="@color/white"
       android:textSize="30sp"

       />
   <com.hbb20.CountryCodePicker
       android:layout_width="100dp"
       android:layout_height="50dp"
       android:layout_below="@id/verifyphone"
       android:gravity="center"
       app:ccpDialog_textColor="@color/white"
       android:background="@drawable/cornertextview"
       app:ccp_showNameCode="false"
       app:ccp_showArrow="false"

      />
   <EditText
       android:id="@+id/phonefield"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_below="@id/verifyphone"
       android:layout_marginStart="110dp"

       android:background="@drawable/cornertextview"
       android:paddingStart="20dp"
       android:paddingEnd="20dp"
       android:drawableStart="@drawable/ic_baseline_phone_24"
       android:drawablePadding="10dp"
       android:maxLength="10"
       android:inputType="phone"


      />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:background="@drawable/next"
       />
</View>


</RelativeLayout>